<style>
  .restaurant-item {
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 4px;
  margin-bottom: 20px;
}

.restaurant-item img {
  max-height: 180px;
  width: 100%;
}

.restaurant-item .caption {
  padding: 10px;
}


.nav-pills-center{
  text-align: center;
}

.nav-pills-center > li{
  float: none;
  display: inline-block;
  margin-bottom:  10px;
}



</style>

<div class="container">




 <ul class="nav nav-pills nav-pills-center">
    <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
    <% @categories.each do |category| %>
      <li role="presentation"><%= link_to category.name, category_path(category) %></li>
    <%end%>
 </ul>







  <div class="row">    
    <!-- restaurants list，有多寫restaurant-item的class style -->
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <%=link_to restaurant_path(restaurant) do %>
            <%= image_tag restaurant.image, class: "img-responsive center-block" %>
         <%end%>

          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p class="label label-default"><%= restaurant.category.name %><p>
            <p><%= truncate(restaurant.description, length: 60) %></p>
          </div>
        </div>
      </div>
    <% end %>
      
          
  </div>
  <!-- 有generate kaminari paginate bootstrap style -->
  <div class="text-center">
    <%= paginate @restaurants %>
  </div>

</div>