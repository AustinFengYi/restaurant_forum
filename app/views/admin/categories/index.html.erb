<style>
    h1{
    color:gray;
    text-align: center;
    margin-bottom: 10px;
      }

    .classtitle{
    text-align: center;
    margin-bottom: 20px;
      }

    .row{
      margin-top: 15px;
    }
</style>

<div class="container">
  
  <h1>餐廳分類總表</h1>


  <div class="classtitle">
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>

  <div class="form-inline" >
    <%= form_for [:admin, @category] do |f| %>
     <div class="form-group">
         <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
     </div>
     <%= f.submit class: "btn btn-primary" %>
        <% if @category.errors.any? %>
          <%= @category.errors.full_messages.to_sentence %>
        <% end %>
     <% end %>
  </div>



  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <td>#</td>
            <td>Category Name</td>
            <td>Edit</td>
            <td>Delete</td>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= link_to 'Edit',admin_categories_path(id: category.id) %></td>
            <td><%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "你確定要刪除嗎?"} %></td>
          </tr>
          <% end %>
        </tbody>
      
            
      </table>

    </div>

  </div>


