<% if @restaurant.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
<%= form_for  [:admin, @restaurant] do |f| %>
  
  <div class="form-group">
      <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "請選擇" }, {class: "form-control"} %>
  </div>

  <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name ,class:"form-control"%>
  </div>

  <div class="form-group">
      <%= f.label :tel, "Tel" %>
      <%= f.text_field :tel,class:"form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :address, "Address" %>
      <%= f.text_field :address,class:"form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :opening_hours, "Opening Hours" %>
      <%= f.text_field :opening_hours,class:"form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description,class:"form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :image, "Photo" %>
      <%= f.filestack_field :image, '上傳圖片',  pickerOptions: {accept: 'image/*'}, id: 'unique-id' %> 
      <%#= f.file_field :image %>
      <%#= image_tag @restaurant.image, width:'300px' if@restaurant.image? %>
  </div>

      <%= f.submit %>
<% end %>
</div>