<style>
  h1{
    color:gray;
    text-align: center;
  }

 .table .control-image-frame {
    max-width: 150px;
    margin-left:15px;
 }

 .table tbody tr td {
    vertical-align: middle;
    font-size: 20pt;
 }
</style>


<h1>餐廳後台管理</h1>

<table class="table table-striped">
    <tr>
      
    </tr> 

    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><div class="control-image-frame"><%= image_tag restaurant.image , width: "100%" %></div>
        </td>
        <td><%= restaurant.name %></td>

        <td><%= link_to admin_restaurant_path(restaurant) do %>
          <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-folder-open"></span> 瀏覽餐廳
          </button>
          <% end %>
        </td>

        <td><%= link_to edit_admin_restaurant_path(restaurant) do %>
          <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-edit"></span> 編輯餐廳
        </button>
        <%end%>
        </td>

        <td><%= link_to admin_restaurant_path(restaurant),method: :delete, data: {confirm: "Are you sure?"} do%>
          <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-trash"></span> 刪除餐廳
          </button>
          <%end%>
        </td>

      </tr>
    <% end %>
</table>

<%= paginate @restaurants %>
<%= link_to 'New Restaurant', new_admin_restaurant_path %>