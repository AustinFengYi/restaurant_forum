
<div class="container">
<%= form_for @user do |f| %>
  <h3>Edit Profile</h3>
  <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name ,class:"form-control"%>
  </div>

  <div class="form-group">
      <%= f.label :intro, "自我介紹" %>
      <%= f.text_area :intro,class:"form-control" %>
  </div>

<div class="form-group">
      <%= f.label :image, "Profile Photo" %>
   <%= f.filestack_field :image, '上傳圖片',  pickerOptions: {accept: 'image/*'}, id: 'unique-id' %> 
 </div>


      <%= f.submit  %>
<% end %>
</div>