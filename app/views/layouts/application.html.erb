<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= filestack_js_include_tag %>
    <%= filestack_js_init_tag %> 
    <style>
      header{
        background-color: gray;
      }
      
      .logo{
        float:left;
      }

      .nav-toolbox{
        float:right;
      }
      .nav-toolbox li {
        display: inline-block;
        color: black;
      }

      .text-color{
        color:black;
      }

      .log{
        text-align: center;
      }
      }
    </style>
  </head>

  <body>
    <header id="header">
      <div class="container">
          <div class="logo">
            <h4>餐廳評論網</h4>    
          </div>

          <% if current_user %>
           <ul class="nav nav-toolbox">
            <% if current_user.admin? %>
             <li><%= link_to 'Admin後台',admin_restaurants_path , class: 'text-color'%></li>
             <li><%= link_to '前台頁面',restaurants_path , class: 'text-color'%></li>
            <%end%> 
             <li>Hi,棒棒的 <%= current_user.email %></li>
             <li><%= link_to('Profile',user_path(current_user), class: 'text-color') %></li>
             <li><%= link_to('登出', destroy_user_session_path, :method => :delete, class: 'text-color')%></li> 
             <li><%= link_to('修改密碼', edit_user_registration_path, class: 'text-color') %></li>
           </ul>
          <% else %>
           <ul class="nav nav-toolbox">
             <li><%= link_to('註冊', new_user_registration_path, class: 'text-color') %></li> 
             <li><%= link_to('登入', new_user_session_path, class: 'text-color') %></li>
           </ul>
          <% end %>
      </div>
    </header>
         
         <div class="log">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
         </div>

    <%= yield %>
  </body>
</html>
